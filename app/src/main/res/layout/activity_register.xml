<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegisterActivity">

    <ImageView
        android:id="@+id/instillLogo2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/instill_logo" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="146dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instillLogo2">

        <ImageView
            android:id="@+id/newIconMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/iconMale"
            app:srcCompat="@drawable/icon_male" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/genderSwitch"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:checked="false"
            android:minWidth="48dp"
            android:minHeight="48dp" />

        <ImageView
            android:id="@+id/newIconFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/iconFemale"
            app:srcCompat="@drawable/icon_female" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/newIconName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight=".3"
                android:contentDescription="@string/iconName"
                app:srcCompat="@drawable/icon_name" />

            <EditText
                android:id="@+id/newNameInput"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight=".7"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/NameHint"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:singleLine="false"
                tools:ignore="DuplicateSpeakableTextCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/newIconEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight=".3"
                android:contentDescription="@string/iconEmail"
                app:srcCompat="@drawable/icon_email" />

            <EditText
                android:id="@+id/newEmailInput"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight=".7"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/EmailHint"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                tools:ignore="DuplicateSpeakableTextCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/newIconPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight=".3"
                android:contentDescription="@string/iconPhone"
                app:srcCompat="@drawable/icon_phone" />

            <EditText
                android:id="@+id/newPhoneInput"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight=".7"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/PhoneHint"
                android:inputType="phone"
                android:minHeight="48dp"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/newIconBday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight=".3"
                android:contentDescription="@string/iconBirthday"
                app:srcCompat="@drawable/icon_birthday" />

            <EditText
                android:id="@+id/newBdayInput"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight=".7"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/BirthdayHint"
                android:inputType="date"
                tools:ignore="TextContrastCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/newIconPwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight=".3"
                android:contentDescription="@string/iconPassword"
                app:srcCompat="@drawable/icon_password" />

            <EditText
                android:id="@+id/newPwdInput"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight=".7"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/PasswordHint"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/newIconConfirmPwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight=".3"
                android:contentDescription="@string/iconConfirmPwd"
                app:srcCompat="@drawable/icon_password" />

            <EditText
                android:id="@+id/newConfirmPwdInput"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight=".7"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/ConfirmPasswordHint"
                android:inputType="textPassword"
                android:minHeight="48dp"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/RegisterButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />
</androidx.constraintlayout.widget.ConstraintLayout>